<h1>帳號管理</h1>

<div class="container-fluid" id="updatePanel">
    <form method="post" action="~/CompanyUser/Update">
        <hr />
        <div class="text-danger"></div>
        <div class="form-group">
            <label for="TaxId">統一編號</label>
            <input class="form-control" type="number" id="taxId" v-model="defaultValues.taxId" name="TaxId" required />
        </div>
        <div class="form-group">
            <label>公司名稱</label>
            <input class="form-control" type="text" id="companyName" v-model="defaultValues.companyName" name="CompanyName" required />
        </div>
        <div class="form-group">
            <label>法定公司名稱</label>
            <input class="form-control" type="text" id="legalName" v-model="defaultValues.legalName" name="LegalName" required />
        </div>
        <div class="form-group">
            <label>聯絡電話</label>
            <input class="form-control" type="text" id="contactNumber" v-model="defaultValues.contactNumber" name="ContactNumber" required />
        </div>
        <div class="form-group">
            <label>郵遞區號</label>
            <input class="form-control" type="text" id="postalCode" v-model="defaultValues.postalCode" name="PostalCode" />
        </div>
        <div class="form-group">
            <label>所在國家</label>
            <input class="form-control" type="text" id="nation" v-model="defaultValues.nation" name="Nation" />
        </div>
        <div class="form-group">
            <label>城市</label>
            <input class="form-control" type="text" id="city" v-model="defaultValues.city" name="City" />
        </div>
        <div class="form-group">
            <label>聯絡地址</label>
            <input class="form-control" type="text" id="address" v-model="defaultValues.address" name="Address" />
        </div>
        <button type="submit" class="btn btn-primary">儲存</button>
    </form>
</div>

<script>
    var app = new Vue({
        el: '#updatePanel',
        data: {
            defaultValues: {},
        },
        mounted: function () {
            let self = this;
            fetch('/CompanyUser/GetManageDefaultValues').then(function (r) { return r.json() })
                .then(function (r) { self.defaultValues = r[0] });
        }
    })
</script>